pipeline {

    agent {
        node{
            label 'maven_build_server'
        }
    }

    tools{
        jdk 'Java-17'
        maven 'maven-3.9.8'
    }
    stages{
        stage('Build the Maven application'){
            steps{
                sh 'mvn install -Dmaven.test.skip=true'
            }
        }
    }
}
